                                    <Grid Width="1000" Height="90" HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <!-- 图标 -->
                                        <Image Source="/Resource/ext/word.png" Width="80" HorizontalAlignment="Left"/>
                                        <!-- 文件信息 -->
                                        <Grid Margin="80,0,0,0">
                                            <!-- 文件标题、大小、时间 -->
                                            <Grid VerticalAlignment="Top" Margin="0,10,0,0">
                                                <!-- 文件名 Click="Hyperlink_Click" -->
                                                <RichTextBox Margin="-5,0,0,0" IsHitTestVisible="False" Background="Transparent" HorizontalAlignment="Left" BorderThickness="0" VerticalAlignment="Top" IsReadOnly="True" IsDocumentEnabled="False">
                                                    <FlowDocument>
                                                        <Paragraph Foreground="#1A0DAB" TextDecorations="Underline">
                                                            <Run>Configuration</Run>
                                                            <Run>Details Report.doc</Run>
                                                        </Paragraph>
                                                    </FlowDocument>
                                                </RichTextBox>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <!-- 文件大小 -->
                                                    <TextBlock Text="1MB" Foreground="#545454" HorizontalAlignment="Right"/>
                                                    <TextBlock Text="•" Foreground="#545454" HorizontalAlignment="Right" Margin="20,0,20,0"/>
                                                    <!-- 文件大小 -->
                                                    <TextBlock Text="2021-08-31" Foreground="#545454" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- 文件夹 -->
                                            <TextBlock Text="C:\Users\{User}\Document\Configuration Details Report.doc" Margin="0,30,0,0" Foreground="#006621" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                                            <!-- 预览 -->
                                            <RichTextBox Margin="-5,50,0,0" Background="Transparent" HorizontalAlignment="Left" BorderThickness="0" VerticalAlignment="Top" IsDocumentEnabled="True">
                                                <FlowDocument>
                                                    <Paragraph>
                                                        <Run Foreground="#545454">
                                                            ...Computer Model:X64-based Desktop
                                                              Operating System: Windows 10 Professional 64-bit (Ver 2004 / DirectX 12)
                                                        </Run>
                                                        <Run Foreground="Red" FontWeight="Bold">Processor</Run>
                                                        <Run Foreground="#545454">
                                                            Ryzen 9 3900X 12-Core 
                                                            Motherboard        ASUS PRIME X570-P (AMD PCI Standard Host CPU Bridge)
                                                            Graphics Card      Nvidia GeForce RTX 2080 Ti (11 GB / Colorful)...
                                                        </Run>

                                                    </Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                        </Grid>

                                        <!-- 分割线 -->
                                        <GridSplitter Grid.Column="1" Height="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Background="Gray" />
                                    </Grid>
                                </ListBoxItem>
                            </ListBox>

                            <!-- 搜索加载中 -->
                            <TextBlock x:Name="_searchLoading" Text="Searching in progress..." FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#2196f3" Margin="0,130,0,0" Visibility="Collapsed"/>

                            <!-- 分页 -->
                            <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="White" Opacity="0.8">
                                <rubyer:PageBar 
                                    IsShowTotal="True"
                                    IsShowPageSize="True"
                                    PageIndex="{Binding PageIndex}"
                                    PageSize="{Binding PageSize}"
                                    Total="{Binding TotalCount}"
                                    PageIndexChanged="PageBar_PageIndexChanged"
                                    PageSizeChanged="PageBar_PageSizeChanged"
                                    CurrentBackground="{DynamicResource Accent}"
                                    CurrentForeground="{DynamicResource AccentForeground}"/>
                            </StackPanel>
                        </Grid>
                        <!-- 分割线 -->
                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" ShowsPreview="False" Background="Gray" />
                        <!-- 右边 -->
                        <Grid Grid.Column="3">
                            <!-- 预览操作 -->
                            <Grid Height="40" VerticalAlignment="Top" Background="#F3F3F3">
                                <!-- 打开文件 -->
