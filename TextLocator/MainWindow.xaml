<Window x:Class="TextLocator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextLocator"
        xmlns:enums="clr-namespace:TextLocator.Enums"
        xmlns:rubyer="clr-namespace:Rubyer;assembly=Rubyer"
        mc:Ignorable="d"
        Title="Textlocator" Width="1600" Height="900" Icon="Resource/App.ico"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closing="Window_Closing" Activated="Window_Activated" SizeChanged="Window_SizeChanged" StateChanged="Window_StateChanged">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskbarInfo"/>
    </Window.TaskbarItemInfo>
    <!-- DockPanel停靠容器 && Viewbox显示盒子 && Canvas画布 -->
    <DockPanel LastChildFill="True">
        <Viewbox Stretch="Fill">
            <Canvas Width="1600" Height="900">
                <!-- 最外层限定狂 -->
                <Grid Width="1600" Height="900">
                    <!-- 头部 -->
                    <StackPanel Orientation="Horizontal" Height="115" VerticalAlignment="Top">
                        <!-- 搜索条件区 -->
                        <StackPanel Margin="10,0,0,0" Width="1020">
                            <!-- 搜索 -->
                            <StackPanel Margin="0,15,10,0" Orientation="Horizontal" >
                                <!-- 搜索框 -->
                                <Border x:Name="SearchTextBorder" BorderThickness="1" BorderBrush="#2196f3" CornerRadius="4">
                                    <TextBox x:Name="SearchText" Width="898" Height="34" FontSize="20" 
                                             HorizontalAlignment="Left" VerticalContentAlignment="Center" 
                                             BorderThickness="0" BorderBrush="Transparent" 
                                         PreviewKeyUp="SearchText_PreviewKeyUp" 
                                         TextChanged="SearchText_TextChanged">
                                        <TextBox.Resources>
                                            <VisualBrush x:Key="HintText" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Please enter the keywords" FontSize="20"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="4"/>
                                                <Setter Property="BorderBrush" Value="#c1d0dc"/>
                                            </Style>
                                        </TextBox.Resources>
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="{x:Null}">
                                                        <Setter Property="Background" Value="{StaticResource HintText}"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background" Value="{StaticResource HintText}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                                <!-- 清空按钮 -->
                                <Button x:Name="CleanButton" Content="X" Margin="-36,0,0,0" Width="36" Height="36" Background="Red" Foreground="White"  Click="CleanButton_Click" Visibility="Hidden"/>
                                <!-- 搜索按钮 -->
                                <Button x:Name="SearchButton" Content="Search" FontSize="16" Margin="10,0,0,0" Width="100" Height="36" Click="SearchButton_Click" Background="#2196f3" Foreground="White"/>
                            </StackPanel>

                            <!-- 条件和排序 -->
                            <Grid Margin="0,10,10,0" VerticalAlignment="Top" Height="40" Background="#F3F3F3">
                                <StackPanel x:Name="SearchFileType" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" IsChecked="True" Tag="{x:Static enums:FileType.All}">All</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.Word}">Word</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.Excel}">Excel</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.PowerPoint}">PPT</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.PDF}">PDF</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.DOM}">DOM</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.Text}">TXT</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.Image}">Image</RadioButton>
                                    <RadioButton GroupName="SearchFileType" Width="80" Margin="1" Tag="{x:Static enums:FileType.SourceCode}">Code</RadioButton>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <!-- 分割线 -->
                        <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" ShowsPreview="False" Background="Gray" />
                        <!-- 扩展区 -->
                        <Grid Margin="10,0,0,0" Width="560">
                            <!-- 其他条件 -->
                            <StackPanel Margin="0,10,10,0" Orientation="Horizontal" >
                                <!-- 扩展信息 -->
                                <StackPanel>
                                    <!-- 搜索区域 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="5*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Enabled Area: " Margin="0,5,0,0" HorizontalAlignment="Left"/>
                                        <TextBox Grid.Column="1" x:Name="EnableAreaInfos" Text="Default Area" IsReadOnly="true"  Height="25" Margin="0,4,0,0" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" MouseDoubleClick="AreaInfos_MouseDoubleClick"/>
                                    </Grid>
                                    <!-- 排除区域 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="5*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Disabled Area: " Margin="0,5,10,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                        <TextBox Grid.Column="1" x:Name="DisableAreaInfos" Text="" Foreground="Gray" IsReadOnly="true" Width="450" Height="25" Margin="0,4,0,0" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" MouseDoubleClick="AreaInfos_MouseDoubleClick" Grid.ColumnSpan="2" Cursor="IBeam"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                <!-- 正则按钮 -->
                                <Button x:Name="RegularToolButton" Content="Regex" ToolTip="Open the regex tool" Margin="0,0,10,0" Width="80" Height="25" Foreground="White" Background="Gray" Click="RegularToolButton_Click" Cursor="Hand"/>
                                <!-- 设置按钮 -->
                                <Button x:Name="SettingButton" Content="Edit" ToolTip="Open the settings interface" Margin="0,0,10,0" Width="80" Height="25" Foreground="White" Background="Gray" Click="SettingButton_Click" Cursor="Hand"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                <!-- 返回AIPage按钮 -->
                                <Button x:Name="BackToAIButton" Content="AI Search" ToolTip="Go back to AI search page" Margin="0,0,10,0" Width="80" Height="25" Foreground="White" Background="#2196f3" Click="BackToAISearch_Click" />
                                <!-- 更新按钮 -->
                                <Button x:Name="IndexUpdateButton" Content="Update" ToolTip="Incremental update index" Margin="0,0,10,0" Width="80" Height="25" Foreground="White" Background="Green" Click="IndexUpdateButton_Click"/>
                                <!-- 重建按钮 -->
                                <Button x:Name="IndexRebuildButton" Content="Rebuild" ToolTip="Delete and rebuild index" Margin="0,0,10,0" Width="80" Height="25" Foreground="White" Background="Red" Click="IndexRebuildButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <!-- 分割线 -->
                    <GridSplitter Grid.Column="1" Height="1" Cursor="Arrow" Margin="0,115,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Gray" />
                    <!-- 中间 -->
                    <Grid VerticalAlignment="Top" Margin="0,116,0,0" Height="758">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="653*" MinWidth="500"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="360*" MinWidth="460"/>
                        </Grid.ColumnDefinitions>
                        <!-- 左边 -->
                        <Grid HorizontalAlignment="Stretch" Grid.Column="0">
                            <!-- 条件和排序 -->
                            <Grid Height="40" VerticalAlignment="Top" Background="#F3F3F3">
                                <!-- 条件 -->
                                <StackPanel Orientation="Horizontal">
                                    <!-- 搜索域 -->
                                    <Grid Margin="10,0,10,0">
                                        <ComboBox x:Name="SearchScope" Margin="0,0,10,0" FontSize="16" Width="205" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="SearchScope_SelectionChanged" DisplayMemberPath="DisplayName" SelectedValuePath="Value">
                                            <!--<ComboBoxItem Content="File Name and Content" IsSelected="True"/>
                                            <ComboBoxItem Content="File Name Only"/>
                                            <ComboBoxItem Content="Content Only"/>-->
                                        </ComboBox>
                                    </Grid>
                                    <!-- 精确检索 -->
                                    <Grid Margin="10">
                                        <CheckBox x:Name="PreciseRetrieval" Content="Precise Search" FontSize="16" HorizontalAlignment="Left" VerticalContentAlignment="Center" Checked="CheckChange" Unchecked="CheckChange"/>
                                    </Grid>
                                    <!-- 匹配全词 -->
                                    <Grid Margin="10">
                                        <CheckBox x:Name="MatchWords" Content="Whole Word Matching" FontSize="16" HorizontalAlignment="Left" VerticalContentAlignment="Center" Checked="CheckChange" Unchecked="CheckChange"/>
                                    </Grid>
                                </StackPanel>
                                <!-- 排序 -->
                                <Label Content="Sort：" FontSize="16"  Margin="0,0,150,0" HorizontalAlignment="Right" VerticalContentAlignment="Center" />
                                <ComboBox x:Name="SortOptions" FontSize="16" Margin="0,0,10,0"  Width="140"  SelectedValuePath="Value" DisplayMemberPath="DisplayName" HorizontalAlignment="Right" VerticalAlignment="Center" SelectionChanged="SortOptions_SelectionChanged">

