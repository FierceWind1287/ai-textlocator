<Window x:Class="TextLocator.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please wait…" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <StackPanel Margin="20" Width="260">
        <!-- ★ 把 TextBlock 的 Text 绑定到 Hint 依赖属性 -->
        <TextBlock Text="{Binding Hint, RelativeSource={RelativeSource AncestorType=Window}}"
                   Margin="0,0,0,10"
                   TextAlignment="Center" />

        <ProgressBar Height="18"
                     IsIndeterminate="True"/>
    </StackPanel>
</Window>
