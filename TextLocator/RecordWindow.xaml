<Window x:Class="TextLocator.RecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecordWindow" Height="220" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    

    <!-- 简单样式，可按主题替换 -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"  Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 状态 -->
        <TextBlock x:Name="txtStatus"
                   Text="Waiting to record"
                   FontSize="14"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <!-- 简单音量柱；后续可换波形 -->
        <ProgressBar x:Name="pbLevel"
                     Grid.Row="1"
                     Height="12"
                     Margin="10"
                     Minimum="0" Maximum="100"/>

        <!-- 控制按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnStart"  Content="Start(_S)" Click="BtnStart_Click"/>
            <Button x:Name="btnStop"   Content="Stop(_T)" Click="BtnStop_Click"   IsEnabled="False"/>
            <Button x:Name="btnRetry"  Content="Restart(_R)" Click="BtnRetry_Click" IsEnabled="False"/>
            <Button x:Name="btnOK"     Content="Confirm(_O)" Click="BtnOK_Click"    IsEnabled="False"/>
            <Button x:Name="btnCancel" Content="Cancel(_C)" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
